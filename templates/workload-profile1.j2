[global]
ioengine=libaio
#omit guest cache and fsync
fsync=0
direct=1
#randomness
percentage_random={{ rand_pct_wp1 }}
rw=randrw
bssplit={{bssplit_wp1}}
#time config
ramp_time={{ ramp_secs }}
time_based=1
runtime={{ runtime_secs }}
#test file size
size={{ test_file_size }}
#output format
group_reporting

[{{ job1_name }}]
filename=/{{ lv1 }}/{{ job1_name }}
zonemode=strided
zonesize={{ zone_size_bytes }}
zonerange={{ zone_range_bytes }}
zoneskip={{ zone_skip_bytes }}
iodepth={{ io_depth_j1 }}

[{{ job2_name }}]
filename=/{{ lv2 }}/{{ job2_name }}
zonemode=strided
zonesize={{ zone_size_bytes }}
zonerange={{ zone_range_bytes }}
zoneskip={{ zone_skip_bytes }}
iodepth={{ io_depth_j2 }}